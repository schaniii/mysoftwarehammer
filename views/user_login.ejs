  <body>

    <div class="container">

      <!-- Static navbar -->
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">Hochzeit Lydia & Sven</a>
          </div>
          <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
              <li><a href="/">Home</a></li>
              <li><a href="/info">Informationen</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <% if (typeof user == undefined) { %>
                  <li class="active"><a href="/logout"> Logout</a></li>
              <% } else { %> 
                  <li class="active"><a href="/login"> Login</a></li>
              <% } %>
            </ul>
          </div><!--/.nav-collapse -->
        </div><!--/.container-fluid -->
      </nav>

      <!-- Main component for a primary marketing message or call to action -->
      <div class="jumbotron">
        <h1 class="text-info"><span class="fa fa-sign-in"></span> Login</h1>

        <% if (message.length > 0) { %>
        <div class="alert alert-warning"><%= message %></div>
        <% } %>

        <!-- LOGIN FORM -->
        <form action="/login" method="post">
          <div class="form-group">
              <label>Benutzername</label>
              <input type="text" class="form-control" name="email" placeholder="Benutzername">
          </div>
          <div class="form-group">
              <label>Passwort</label>
              <input type="password" class="form-control" name="password" placeholder="Passwort">
          </div>

          <button type="submit" class="btn btn-danger btn-lg">Login</button>
        </form>
        <hr>
      </div>

    </div> <!-- /container -->


